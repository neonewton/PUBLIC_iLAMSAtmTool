def run_upload_elentra_link(Elentra_Event_entry, LAMS_Lesson_ID_entry, LAMS_Lesson_Title_entry, Upload_Monitor_URL_checkbox, Upload_Student_URL_checkbox):
    start_time = time.time()  
     
